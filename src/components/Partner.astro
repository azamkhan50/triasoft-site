---



<section class="bg-gray-100 dark:bg-gray-900 py-8">
  <div class="max-w-screen-xl mx-auto px-4">
    <h2 class="text-2xl font-bold text-center mb-6">Our Partnerships</h2>


<!-- Horizontal Scroll -->
<div class=" flex space-x-6 overflow-x-auto scrollbar-hide pb-4">
  {partners.map((partner) => (
    <div class="flex-shrink-0 w-40 text-center">
      <img
        src={partner.logo}
        alt={partner.name}
        class="mx-auto w-20 h-20 object-contain"
      />
      <p class="mt-2 text-gray-700 dark:text-gray-300 font-medium">
        {partner.name}
      </p>
    </div>
  ))}
</div>


  </div>
</section>

<style>
  /* Hide default scrollbar */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
